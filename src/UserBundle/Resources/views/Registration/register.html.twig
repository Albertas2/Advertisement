{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'form/form_errors.html.twig' %}
{% block body %}
<div class="container">
    <div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Register</h3>
            </div>
            <div class="panel-body">
                {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'role': 'form', 'attr': {'class': 'fos_user_registration_register'}}) }}
                    <fieldset>
                        <div class="form-group">
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
                            {{ form_errors(form.username) }}
                        </div>

                        <div class="form-group">
                            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                            {{ form_errors(form.plainPassword.first) }}
                        </div>

                        <div class="form-group">
                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'Password Confirm'}}) }}
                            {{ form_errors(form.plainPassword.second) }}
                        </div>

                        <input class="btn btn-sm" type="submit" name="submit" value="Register" />
                    </fieldset>
                {{ form_end(form) }}
            </div>

        </div>
    </div>
    </div>
</div>

{% endblock body %}