{% extends 'base.html.twig' %}
{% form_theme form 'form/form_errors.html.twig' %}
{% block body %}
    <div class="container" style="margin-top:30px; ">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default" >
                    <div class="panel-heading">
                        <h3 class="panel-title">Edit Advertisement</h3>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form, {'method': 'post', 'action': path('advertisement_advertisement_edit', {'id': id}), 'role': 'form'}) }}
                        <fieldset>
                            <div class="form-group">
                                {{ form_widget(form.title, {'attr':{'class':'form-control', 'placeholder': 'Title'}}) }}
                                {{ form_errors(form.title) }}
                            </div>

                            <div class="form-group">
                                {{ form_widget(form.description, {'attr':{'class':'form-control', 'placeholder': 'Description'}}) }}
                                {{ form_errors(form.description) }}
                            </div>

                            <input class="btn btn-sm" type="submit" name="submit" value="Update" />
                        </fieldset>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <br>
        </div>
    </div>
{% endblock body %}